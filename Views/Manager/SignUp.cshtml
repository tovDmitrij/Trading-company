@model Trading_company.Models.ManagerModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="d-flex justify-content-center">
    <div class="col-4">

        @*РЕГИСТРАЦИЯ МЕНЕДЖЕРА*@
        <form asp-controller="Manager" asp-action="SignUp">
            <div class="row m-1 bg-secondary bg-opacity-25">
                <h1 class="d-flex justify-content-center">@ViewData["Title"]</h1>
            </div>

            @*ФИО менеджера*@
            <div class="row m-1 bg-secondary bg-opacity-25">
                <b class="bg-secondary bg-opacity-50">ФИО*</b>
                <div>
                    <input class="w-100" type="text" asp-for="fullname" value=@ViewData["Man_fullname"] />
                </div>
            </div>

            @*Почта*@
            <div class="row m-1 bg-secondary bg-opacity-25">
                <b class="bg-secondary bg-opacity-50">Почта*</b>
                <div>
                    <input class="w-100" type="text" asp-for="email" value=@ViewData["Man_email"] />
                </div>
            </div>

            @*Пароль*@
            <div class="row m-1 bg-secondary bg-opacity-25">
                <b class="bg-secondary bg-opacity-50">Пароль*</b>
                <div>
                    <input class="w-100" type="password" asp-for="password" value=@ViewData["Man_password"] />
                </div>
            </div>

            @*Процент с продаж*@
            <div class="row m-1 bg-secondary bg-opacity-25">
                <b class="bg-secondary bg-opacity-50">%*</b>
                <div>
                    <input class="w-100" type="number" min="0" max="50" asp-for="percent" value=@ViewData["Man_percent"] />
                </div>
            </div>

            @*Идентификатор руководителя*@
            <div class="row m-1 bg-secondary bg-opacity-25">
                <b class="bg-secondary bg-opacity-50">ID руководителя</b>
                <div>
                    <input class="w-100" type="number" asp-for="parent_id" value=@ViewData["Man_leadid"] />
                </div>
            </div>

            <div class="row m-1 bg-secondary bg-opacity-25">
                <input type="submit" value="Подтвердить" />
            </div>

            <h4 class="row m-1 text-light bg-dark">@ViewData["Error"]</h4>
        </form>
    </div>
</div>