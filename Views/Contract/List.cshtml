@model IEnumerable<ContractModel>
@{
    ViewData["Title"] = "Список контрактов";
}

<div class="d-flex justify-content-center">

    <form asp-controller="Contract" asp-action="Delete">
        <div class="row m-1 bg-secondary bg-opacity-25">
            <h1 class="d-flex justify-content-center">@ViewData["Title"]</h1>
        </div>

        <div class="col">
            <table class="table table-bordered border-dark" style="text-align:center; vertical-align: middle;">
                <thead class="table-light table-bordered border-dark">
                    <tr>
                        <th rowspan="2">ID</th>
                        <th rowspan="2">Контрагент</th>
                        <th colspan="2">Срок</th>
                        <th rowspan="2">Комментарии</th>
                        <th rowspan="2">Возможные действия</th>
                    </tr>
                    <tr>
                        <th>Дата подписания</th>
                        <th>Дата окончания</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var contract in Model)
                    {
                        if (contract.dayto < DateTime.Now)
                        {
                            <tr class="bg-danger">
                                <td class="">@contract.id</td>
                                <td>@contract.contr_fullname#@contract.contr_id</td>
                                <td>@contract.dayfrom</td>
                                <td>@contract.dayto</td>
                                <td>@contract.comments</td>
                                <td></td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td class="">@contract.id</td>
                                <td>@contract.contr_fullname#@contract.contr_id</td>
                                <td>@contract.dayfrom</td>
                                <td>@contract.dayto</td>
                                <td></td>
                                <td><button type="submit" name="id" value=@contract.id>Завершить</button></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </form>

</div>
